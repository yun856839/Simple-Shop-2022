<a class="btn btn-outline-info" href="/admin/products">Products</a>
<a class="btn btn-outline-info" href='/admin/orders'>Orders</a>

<hr>

<div class="row">

  <div class="col-md-4">
    <div class="card mb-4 shadow-sm">
      <img class="bd-placeholder-img card-img-top" width="100%" height="225" src={{product.image}}></img>
      <div class="card-body">
        <p class="card-text">
        <h4><a href="/products/{{product.id}}">{{product.id}} {{product.name}}</a></h4>
        <span>{{product.description}}</span>
        </p>
        <div class="d-flex justify-content-between align-items-center">

          <small class="text-muted">$ {{product.price}}</small>

        </div>
      </div>
    </div>
  </div>

</div>